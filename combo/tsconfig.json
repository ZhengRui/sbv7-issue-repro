{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2019", "dom"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "jsx": "react",
    "module": "ESnext",
    "declaration": true,
    "declarationDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "stories"],
  "exclude": ["node_modules", "dist"],
}
